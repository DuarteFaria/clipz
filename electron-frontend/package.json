{
  "name": "clipz",
  "version": "1.0.0",
  "description": "A powerful, lightweight clipboard manager",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "npm run build-backend && electron-builder",
    "build-backend": "cd .. && zig build -Doptimize=ReleaseFast",
    "build-backend-x64": "cd .. && zig build -Doptimize=ReleaseFast -Dtarget=x86_64-macos",
    "build-backend-arm64": "cd .. && zig build -Doptimize=ReleaseFast -Dtarget=aarch64-macos",
    "build:mac": "npm run build-backend && electron-builder --mac",
    "build:win": "npm run build-backend && electron-builder --win",
    "build:linux": "npm run build-backend && electron-builder --linux",
    "dist": "npm run build-backend && electron-builder --publish=never",
    "pack": "npm run build-backend && electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "clipboard",
    "manager",
    "productivity",
    "zig",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.yourname.clipz",
    "productName": "Clipz",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "../zig-out/bin/clipz"
    ],
    "extraResources": [
      {
        "from": "../zig-out/bin/",
        "to": "bin/",
        "filter": [
          "clipz*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}